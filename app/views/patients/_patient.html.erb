<div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Next Appointment</th>
        </tr>
      </thead>
      <tbody>
        <% @patients.each do |patient| %>
          <tr>
            <td>
              <%= link_to "#{patient.first_name} #{patient.last_name}", edit_patient_path(patient), class: "text-decoration-none text-primary" %>
            </td>
            <td><%= patient.email %></td>
            <td>
              <% if patient.next_appointment.present? %>
                <%= patient.next_appointment.strftime("%Y-%m-%d %I:%M %p") %>
              <% else %>
                <span class="text-muted">N/A</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>