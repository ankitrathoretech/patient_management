<h1>Patients</h1>
<%= form_with url: patients_path, method: :get, local: true do |form| %>
  <%= form.text_field :query, placeholder: 'Search by name or email', value: params[:query] %>
  <%= form.submit 'Search' %>
<% end %>

<%= link_to 'Create New Patient', new_patient_path, class: 'btn btn-primary' %>
<%= link_to 'Relevant Soon', relevant_patients_path, class: 'btn btn-secondary' %>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Next Appointment</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to patient.first_name,  edit_patient_path(patient) %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.email %></td>
        <td><%= patient.next_appointment %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @patients %>
